.header
    grid-area: hd;
    position: fixed;
    min-width: 100vw;
    z-index: 1000;
    height: 120px;

.body
    grid-area: bd;
    overflow: hidden auto;
    margin-top: 120px;

.navbar
    grid-area: nav;
    position: fixed;
    z-index: 1001;
    background-color: #FFFFFF;
    height: 100%;
    transition-property: transform;
    transition-duration: 2s;

    @media screen and (min-width: 601px)
        display: none;

.body::-webkit-scrollbar
    display: none;