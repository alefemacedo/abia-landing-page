.reviews
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 117px;
    margin-bottom: 209px;

    .title
        display: flex;
        flex-direction: column;
        max-width: 840px;
        margin-bottom: 64.6px;

        span
            font-family: 'Bebas neue', sans-serif;
            font-size: 52px;
            line-height: 62.4px;
            text-align: center;
            color: #000000;
        
        img
            width: 168.15px;
            align-self: end;

    .cards
        display: flex;
        gap: 58px;
    
    @media screen and (max-width: 600px)
        margin-top: 71px;
        margin-bottom: 104px;

        .title
            span
                font-size: 26px;
                line-height: 31.2px;

            img
                width: 101px;
        
        .cards
            gap: 13px;
