.about
    margin-top: 170px;
    margin-bottom: 197px;
    position: relative;
    height: 2000px;
    display: flex;
    flex-direction: column;

    .content
        display: flex;
        height: 699px;
        background-color: #B968A6;
        justify-content: space-between;

        .abilities
            width: 430px;
            height: 323px;
            margin-top: 45px;
            margin-left: 108px;

        .visual-identity
            position: relative;

            .background
                width: 670.5px;

            .letter-A
                position: absolute;
                top: -62.5px;
                right: 526px;
                z-index: 1;
                width: 188.73px;

            .letter-B
                position: absolute;
                z-index: 1;
                top: 31px;
                right: 468px;
    
    .presentation
        align-self: center;
        display: flex;
        border-radius: 10px;
        position: absolute;
        top: 611px;

        .text
            display: flex;
            flex-direction: column;
            max-width: 811px;
            border-radius: 10px 0px 0px 10px;
            padding: 62.5px 133px 62.5px 133px;
            background-color: #FAFAFA;

            .title
                font-family: 'Bebas neue', sans-serif;
                font-size: 36px;
                line-height: 43.2px;

                .hi
                    color: #B766A4;
                    margin-bottom: 20px;
                
                .iam
                    color: #000000;
            
            .resume
                display: flex;
                max-width: 509px;
                height: 180px;
                margin-top: 40px;
                font-family: 'Poppins', sans-serif;
                font-size: 20px;
                line-height: 30px;
                text-transform: none;

        .border
            width: 107.17px;
            height: 581px;
            border-radius: 0px 10px 10px 0px;
            background-color: #461841;
            content: ' ';
        
        .buttons
            display: flex;
            justify-content: space-between;
            align-self: center;
            width: 446px;
            margin-top: 44px;
            text-transform: none;

            button, a
                width: 197px;
                height: 67px;
                border-radius: 20px;
                cursor: pointer;
                font-family: "Montserrat", sans-serif;
                font-size: 20px;
                line-height: 30px;
                font-weight: 600;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                text-decoration: none;

                img
                    margin-right: 8px;
            
            .linkedin
                color: #942F88;
                background-color: #FFFFFF;
                border: 0.5px solid #942F88;
            
            .resume-button
                background-color: #B967A6;
                border: 0.5px solid #B967A6;
                color: #FFFFFF;

    .people-reviews
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 589px;

        .title
            display: flex;
            flex-direction: column;
            max-width: 840px;
            margin-bottom: 64.6px;

            span
                font-family: 'Bebas neue', sans-serif;
                font-size: 52px;
                line-height: 62.4px;
                text-align: center;
                color: #000000;
            
            img
                width: 168.15px;
                align-self: end;