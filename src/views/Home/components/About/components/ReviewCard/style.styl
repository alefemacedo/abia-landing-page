.review-card
    position: relative;
    display: flex;
    flex-direction: column;
    max-width: 840px;
    height: 435px;
    border-radius: 25px;
    background-color: #7D3E90D9;
    z-index: 1;
    padding: 65px 85px 45px 85px;

    &:before
        content: ' ';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 25px;
        background-image: url('@/assets/img/fundo.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-color: #7D3E90D9;
        background-blend-mode: multiply;
        opacity: 0.6;
        z-index: -1;

    .review-title
        display: flex;
        justify-content: center;

        img
            width: 97px;
            height 97px;
            border-radius: 200px;
            margin-right: 40px;
        
        .info
            width: 631px;
            align-content: center;
            color: #F1F1F1;

            .name
                font-family: 'Bebas neue', sans-serif;
                font-size: 26px;
                line-height: 31.2px;
            
            .titles
                font-size: 16px;
                line-height: 19.5px;
    
    .review-content
        display: flex;
        align-self: center;
        max-width: 638px;
        text-transform: none;
        color: #F1F1F1;
        margin-top: 85px;

        img
            align-self: start;
            margin-right: 25px;

        .review-text
            text-align: center;
            font-size: 22px;
            line-height: 26.82px;