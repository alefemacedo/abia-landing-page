.values
    position: relative;
    height: 718px;
    background-color: #60378D;
    z-index: 1;

    &:before
        content: ' ';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('@/assets/img/fundo.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-color: #60378D;
        background-blend-mode: multiply;
        opacity: 0.6;
        z-index: -1;

    .title
        display: flex;
        justify-content: center;
        padding-top: 128px;
        margin-bottom: 116px;

        img
            width: 300px;

    .content
        width: 100vw;
        display: flex;
        justify-content: center;

        .text
            color: #fff;
            font-size: 32px;
            line-height: 48px;
            text-align: center;
            width: 953px;
    
    @media screen and (max-width: 600px)
        height: 541px;

        .title
            padding-top: 83px;
            margin-bottom: 40px;

            img
                width: 147px;
        
        .content .text
            width: 280px;
            font-size: 16px;
            line-height: 24px;