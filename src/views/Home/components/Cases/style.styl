.cases
    position: relative;
    height: 866px;
    background-color: #942F88;
    z-index: 1;
    padding: 90px 75px 34px 75px;

    &:before
        content: ' ';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('@/assets/img/fundo.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-color: #942F88;
        background-blend-mode: multiply;
        opacity: 0.6;
        z-index: -1;

    .heart
        position: absolute;
        top: 74px;
        right: 135.08px;

    .title
        display: flex;
        justify-content: start;
        margin: 0px 0px 55px 75px;
        height: 105px;

        .lightning
            margin-right: 32px;
            width: 66.85px;
            height: 79.2px;

        .text
            display: flex;
            flex-direction: column
            color: #FFFFFF;

            .text-1
                font-family: "Poppins", sans-serif;
                font-size: 26px;
                line-height: 39px;
                letter-spacing: 0.07em;
                text-align: left;
            
            .text-2
                font-size: 52px;
                line-height: 63.39px;
                letter-spacing: 0.07em;
                text-align: left;

    .cards
        display: flex;
        justify-content: center;
        gap: 71px;