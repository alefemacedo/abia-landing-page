.trade-plus-case
    text-transform: none;

    .section
        display: flex;
        flex-direction: column;
        position: relative;
        margin-bottom: 32px;
        margin-left: 7px;
        margin-right: 7px;

        img
            align-self: center;
            margin-top: 50px;

    .title
        font-size: 16px;
        line-height: 28px;
        width: 278px;
        color: #451841
        position: relative;
        display: inline-block;
    
        &:after
            content: "";
            position: absolute;
            width: 165px;
            height: 0px;
            bottom: 0;
            left: 0px;
            top: 24px;
            border-radius: 2px;
            border: 1px solid #b967a6;

    .title2
        font-size: 16px;
        line-height: 24px;
        color: #1E1E1E;

    .title3
        font-size: 14px;
        line-height: 22px;
        color: #451841;

    .text
        font-size: 14px;
        line-height: 22px;
        letter-spacing: -0.02em;
        text-align: left;
        color: #5E6B81;
        width: 330px;

    @media screen and (min-width: 576px)
        .section
            margin-left: 57px;
            margin-right: 70px;
    
    @media screen and (min-width: 768px)
        .text
            width: auto;

    @media screen and (min-width: 900px)
        .text
            font-size: 24px;
            line-height: 42px;
            width: auto;

        .title
            font-size: 26px;
            line-height: 56px;
            margin-bottom: 50px;
            width: auto;

            &:after
                top: 46px;

        .title2
            font-size: 26px;
            line-height: 56px;

        .title3
            font-size: 24px;
            line-height: 28px;

    @media screen and (min-width: 1200px)
        .section
            margin-bottom: 152px;
            margin-left: 114px;
            margin-right: 140px;

        .title
            font-size: 48px;
            line-height: 72px;
            margin-bottom: 70px;
            width: auto;

            &:after
                width: 165px;
                border-radius: 6px;
                top: 72px;
                border: 3px solid #b967a6;

        .title2
            font-size: 48px;
            line-height: 72px;

        .title3
            font-size: 32px;
            line-height: 38px;

    .highlight
        color: #451841;

    .presentation
        position: relative;
        display: flex;
        flex-direction: column;
        height: 370px;
        margin-left: 30px;

        .case
            display: flex;
            align-items: center;
            margin-bottom: 42px;
            margin-top: 27px;

            img
                margin-right: 11px;
                width: 20px;

            .type
                padding: 4px 8px;
                border-radius: 25px;
                font-size: 20px;
                line-height: 24px;
                background-color: #FFF0FC;
                font-family: 'Poppins', sans-serif;
                color: #09A2B6;

        .logo
            width: 172px;
            margin-bottom: 50px;
        
        .description
            display: inline-block;
            max-width: 280px;
            color: #010101;
            font-size: 16px;
            line-height: 24px;
            letter-spacing: -0.02em;
            text-align: left;
            margin-bottom: 30px;

        .tools
            font-size: 16px;
            line-height: 24px;
            max-width: 200px;
            max-height: 54px;
            padding: 8px 16px 8px 16px;
            gap: 16px;
            border-radius: 8px 0px 0px 0px;
            background-color: #F1F1F1;

            img
                margin-left: 16px;
                width: 12px;
        
        .bubble
            position: absolute;
            top: 0px;
            right: 0px;

            img
                width: 145px;

        .iphone
            position: absolute;
            width: 187px;
            top: 14px;
            right: 6px;
            z-index: 1;
        
        @media screen and (min-width: 576px)
            margin-left: 60px;

            .description
                max-width: 342px;

            .bubble img
                width: 250px;

            .iphone
                width: 275px;
                top: 74px;
                right: -12px;
        
        @media screen and (min-width: 768px)
            .description
                max-width: 483px;

        @media screen and (min-width: 900px)
            height: 465px;

            .case
                margin-bottom: 85px;
                margin-top: 54px;
            
            .logo
                width: 122px;
            
            .tools
                font-size: 24px;
                line-height: 30px;
                max-width: 279px;

                img
                    width: auto;

            .bubble img
                width: 375px;

            .iphone
                width: 475px;
                right: 20px;
                top: 25px;

        @media screen and (min-width: 1200px)
            height: 832px;
            margin-left: 120px;

            .case
                margin-top: 108px;

                img
                    margin-right: 22px;
                    width: auto;
                
                .type
                    padding: 11px 63px;
                    border-radius: 53px;
                    font-size: 32px;
                    line-height: 40.8px;

            .logo
                width: 308.31px;
                margin-bottom: 56.15px;
            
            .description
                font-size: 24px;
                line-height: 40px;

            .bubble img
                width: auto;
            
            .iphone
                width: 778px;
                top: 74px;
                right: -12px;

    .contextualization, .problem-definition
        max-width: 861px;
        margin-right: 445px;

    .character-1
        position: absolute;
        right: -315px;
        top: 175px;
        width: 100px;

        @media screen and (min-width: 900px)
            right: -298px;
            top: 238px;
            width: auto;

    .character-2
        position: absolute;
        right: -315px;
        top: 396px;
        width: 100px;

        @media screen and (min-width: 900px)
            right: -370px;
            width: auto;

    .stars-plus
        position: absolute;
        right: 25px;
        top: 654.88px;
        display: none;

        @media screen and (min-width: 768px)
            display: inline;
    
    img.trade-plus-reunions
        align-self: self-start;
        margin: 15px 15px 30px 15px;
        width: 315px;
        align-self: center;

        @media screen and (min-width: 900px)
            width: auto;
            margin-bottom: 57px;
            margin-left: 24px;
    
    .persona-content
        display: flex;
        flex-direction: column;
        gap: 21px;

        .persona-profile
            align-self: center;
            display: flex;
            flex-direction: column;
            align-items: center;

            img
                width: 190px;
                border-radius: 0px;

            .quote
                display: inline-block;
                width: 320px;
                margin-top: 38px;
                font-size: 20px;
                line-height: 30px;
                text-align: center;
        
        @media screen and (min-width: 768px)
            flex-direction: row;

            .persona-profile
                align-self: self-start;

                img
                    width: auto;
                    border-radius: 53px;

                .quote
                    width: 408px;
                    margin-top: 79px;

            .text
                padding-top: 75px;

    .data-analysis ol li::marker
        color:#451841

    .objectives
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;

        .title
            text-align: center;

            &:after
                display: none;

        .item-list
            display: flex;
            flex-direction: column;
            justify-content: space-between;

            .item
                display: flex;
                flex-direction: column;
                align-items: center;

                img
                    width: 40px;
                    height: 40px;
                    margin-top: 20px;
                    margin-bottom: 10px;

                span
                    max-width: 290px;
                    font-size: 14px;
                    line-height: 22px;
                    text-align: center;
                    color: #22222A;
        
        @media screen and (min-width: 768px)
            .item-list
                flex-direction: row;

                .item
                    width: 225px;

        @media screen and (min-width: 900px)
            margin-top: 100px;

            .item-list .item
                width: auto;
                margin-right: 112px;

                &:last-of-type
                    margin-right: 85px;
                
                &:first-of-type
                    margin-left: 85px;
                
                img
                    margin-top: 50px;
                    width: 80px;
                    height: 80px;

                span
                    font-size: 24px;
                    line-height: 36px;

    .wireflow img
        width: 330px;

        @media screen and (min-width: 768px)
            width: 750px;

        @media screen and (min-width: 900px)
            width: auto;

    .insights
        max-width: 916px;
        display: flex;

        img
            margin-top: 0px;
            margin-right: 42px;
            display: none;
        
            @media screen and (min-width: 900px)
                display: inline;

    .csd-images
        display: flex;
        align-items: center;
        gap: 11px;
        overflow-x: auto;

        &::-webkit-scrollbar
            display: none;

        figure
            margin: 2px 2px 20px 2px;

            img
                margin-top: 0px;
                width: 300px;

            figcaption
                margin-top: 5px;

        @media screen and (min-width: 900px)
            gap: 42px;
            overflow-x: hidden;
            
            figure
                margin-block-start: 1em;
                margin-block-end: 1em;
                margin-inline-start: 40px;
                margin-inline-end: 40px;

                img
                    margin-top: 50px;

                figcaption
                    margin-top: 20px;
    
    .wireframes-idea .scrollimage
        overflow-x: auto;
        
        &::-webkit-scrollbar
            display: none;

        img
            margin-top: 20px;

        @media screen and (min-width: 1200px)
            overflow-x: hidden;
            margin-bottom: 0px;

            img
                margin-top: 50px;

    .insights-improvements ol li::marker
        color:#451841