.start-dev-case
    text-transform: none;

    .section
        display: flex;
        flex-direction: column;
        position: relative;
        margin-bottom: 32px;
        margin-left: 7px;
        margin-right: 7px;

        img
            align-self: center;
            margin-top: 50px;

    .title
        font-size: 16px;
        line-height: 28px;
        width: 278px;
        color: #451841
        position: relative;
        display: inline-block;
    
        &:after
            content: "";
            position: absolute;
            width: 70px;
            height: 0px;
            bottom: 0;
            left: 0px;
            top: 25px;
            border-radius: 2px;
            border: 1px solid #b967a6;

    .title2
        font-size: 16px;
        line-height: 24px;
        color: #1E1E1E;

    .text
        font-size: 14px;
        line-height: 22px;
        letter-spacing: -0.02em;
        text-align: left;
        color: #5E6B81;
        width: 330px;

    @media screen and (min-width: 576px)
        .section
            margin-left: 57px;
            margin-right: 70px;
    
    @media screen and (min-width: 768px)
        .text
            width: auto;

    @media screen and (min-width: 900px)
        .text
            font-size: 24px;
            line-height: 42px;
            width: auto;

        .title
            font-size: 26px;
            line-height: 56px;
            margin-bottom: 50px;
            width: auto;

            &:after
                width: 110px;
                top: 50px;

        .title2
            font-size: 26px;
            line-height: 56px;

    @media screen and (min-width: 1200px)
        .section
            margin-bottom: 152px;
            margin-left: 114px;
            margin-right: 140px;

        .title
            font-size: 48px;
            line-height: 72px;
            margin-bottom: 70px;
            width: auto;

            &:after
                width: 165px;
                border-radius: 6px;
                top: 72px;
                border: 3px solid #b967a6;

        .title2
            font-size: 48px;
            line-height: 72px;

    .highlight
        color: #451841;

    .presentation
        position: relative;
        display: flex;
        flex-direction: column;
        height: 370px;
        margin-left: 7px;

        .case
            display: flex;
            align-items: center;
            margin-bottom: 42px;
            margin-top: 27px;

            img
                margin-right: 11px;
                width: 20px;

            .type
                padding: 4px 8px;
                border-radius: 25px;
                font-size: 20px;
                line-height: 24px;
                background-color: #FFF0FC;
                font-family: 'Poppins', sans-serif;
                color: #013CAA;

        .logo
            width: 140px;
            margin-bottom: 50px;
        
        .description
            display: inline-block;
            max-width: 280px;
            color: #010101;
            font-size: 16px;
            line-height: 24px;
            letter-spacing: -0.02em;
            text-align: left;
            margin-bottom: 30px;

        .tools
            font-size: 16px;
            line-height: 24px;
            max-width: 200px;
            max-height: 54px;
            padding: 8px 16px 8px 16px;
            gap: 16px;
            border-radius: 8px 0px 0px 0px;
            background-color: #F1F1F1;

            img
                margin-left: 16px;
                width: 12px;
        
        .bubble
            position: absolute;
            top: 0px;
            right: 0px;

            img
                width: 145px;
        
        .iphone
            position: absolute;
            width: 187px;
            top: 28px;
            right: 6px;
            z-index: 1;

        @media screen and (min-width: 576px)
            margin-left: 60px;

            .description
                max-width: 342px;

            .bubble img
                width: 250px;

            .iphone
                width: 275px;
                top: 74px;
                right: -12px;
        
        @media screen and (min-width: 768px)
            .description
                max-width: 465px;

        @media screen and (min-width: 900px)
            height: 465px;

            .case
                margin-bottom: 85px;
                margin-top: 54px;
            
            .logo
                width: 122px;
            
            .tools
                font-size: 24px;
                line-height: 30px;
                max-width: 279px;

                img
                    width: auto;
            
            .description
                max-width: 570px;

            .bubble img
                width: 375px;

            .iphone
                width: 475px;
                right: 20px;
                top: 70px;

        @media screen and (min-width: 1200px)
            height: 832px;
            margin-left: 120px;

            .case
                margin-top: 108px;

                img
                    margin-right: 22px;
                    width: auto;
                
                .type
                    padding: 11px 63px;
                    border-radius: 53px;
                    font-size: 32px;
                    line-height: 40.8px;

            .logo
                width: 308.31px;
                margin-bottom: 56.15px;
            
            .description
                font-size: 24px;
                line-height: 40px;

            .bubble img
                width: auto;
            
            .iphone
                width: 778px;
                top: 74px;
                right: -12px;

    .objectives
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;

        .title
            text-align: center;

            &:after
                display: none;

        .item-list
            display: flex;
            flex-direction: column;
            justify-content: space-between;

            .item
                display: flex;
                flex-direction: column;
                align-items: center;

                img
                    width: 40px;
                    height: 40px;
                    margin-top: 20px;
                    margin-bottom: 10px;

                span
                    max-width: 290px;
                    font-size: 14px;
                    line-height: 22px;
                    text-align: center;
                    color: #22222A;

        @media screen and (min-width: 768px)
            .item-list
                flex-direction: row;

                .item
                    width: 225px;

        @media screen and (min-width: 900px)
            margin-top: 99px;

            .item-list .item
                width: auto;
                margin-right: 112px;

                &:last-of-type
                    margin-right: 85px;
                
                &:first-of-type
                    margin-left: 85px;
                
                img
                    margin-top: 50px;
                    width: 80px;
                    height: 80px;

                span
                    font-size: 24px;
                    line-height: 36px;
        
    .stars-plus-1
        position: absolute;
        left: 0px;
        top: 260px;
        width: 40px;

        @media screen and (min-width: 768px)
            top: 130px;

        @media screen and (min-width: 900px)
            width: auto;
            top: 430px;
        
        @media screen and (min-width: 1200px)
            top: 290px;
    
    .stars-plus-2
        position: absolute;
        right: 3px;
        top: 209px;
        width: 40px;

        @media screen and (min-width: 768px)
            top: 160px;

        @media screen and (min-width: 900px)
            right: 50px;
            top: 370px;
            width: auto;

        @media screen and (min-width: 1200px)
            top: 507px;

    .research
        img.desk-research, img.research-table
            max-width: 330px;

            @media screen and (min-width: 578px)
                max-width: 570px;

        @media screen and (min-width: 1200px)
            img.desk-research
                max-width: 1023px;
            
            img.research-table
                max-width: 943px;
    
    .style-guide img
        max-width: 330px;
        
        @media screen and (min-width: 578px)
            max-width: 570px;

        @media screen and (min-width: 1200px)
            max-width: 1118px;
    
    .user-flow img
        max-width: 330px;

        @media screen and (min-width: 578px)
            max-width: 570px;

        @media screen and (min-width: 1200px)
            max-width: 914px;

    .wireframe, .high-fidelity
        .images
            overflow-x: auto;

            img
                margin-top: 20px;
                max-width: 660px;

        @media screen and (min-width: 1200px)
            .images
                overflow-x: hidden;

                img
                    width: auto;
