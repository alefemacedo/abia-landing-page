.footer
    display: flex;
    flex-direction: column;
    font-family: "Bebas neue", sans-serif;
    width: 100%;

    .contact-info
        display: flex;
        margin-left: 45px;

        .cats
            align-self: start;
            margin-right: 46.09px;

        .title
            font-family: 'Bebas neue', sans-serif;
            font-size: 52px;
            line-height: 78px;
            letter-spacing: 0.01em;
            max-width: 682px;
            margin-bottom: 94px;

            span:first-of-type
                color: #AB2F5E;

        .email
            display: flex;
            font-size: 38px;
            line-height: 25px;
            letter-spacing: 0.02em;
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 77px;
            height: 117px;

            img
                align-self: start;
                margin-right: 21px;

            .value
                text-transform: none;
                text-decoration: underline;
                color: #AB2F5E;

    .social-media
        display: flex;
        justify-content: center
        margin-bottom: 131px;

        a
            margin-right: 22px;

            &:last-child
                margin-right: 0px;

    .quote
        background-color: #942F88;

        .text
            width: 397px;
            display: flex;
            flex-direction: column;
            text-align: left;
            letter-spacing: 0.01em;
            padding: 19px 814px 9px 69px;

            .author
                font-size: 40px;
                line-height: 60px;

            .quote-text
                font-size: 16px;
                line-height: 30px;
                color: #F1F1F1;

            .copyright
                font-size: 10px;
                line-height: 15px;
                margin-top: 17px;
    
    @media screen and (max-width: 600px)
        .contact-info
            .cats
                display: none;

            .title
                width: 269px;
                font-size: 26px;
                line-height: 39px;
                text-align: center;
                margin-bottom: 50px;
            
            .email
                font-size: 22px;
                line-height: 10px;
                letter-spacing: 0.02em;
                height: 81px;
                margin-bottom: 10px
                position: relative;

                img
                    width: 37px;
                    position: absolute;
                    top: -13px;

                .address
                    .label
                        margin-left: 54px;
                    
                    .value
                        line-height: 34px;

        .social-media
            margin-bottom: 114.68px;
        
        .quote
            .text
                height: 300px;
                width: auto;
                padding: 49px 40px 28px 69px;

                .author
                    margin-bottom: 44px;

                .quote-text
                    width: 280px;
                    font-size: 20px;
                    line-height: 30px;
                
                .copyright
                    margin-top: 65px;