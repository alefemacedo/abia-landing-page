.body
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    align-items: center;
    width: 100vw;
    height: 100vh;
    margin-top: 0px;

    .content
        font-family: "Ruda", sans-serif;
        text-transform: none;
        position: relative;
        height: 100%;
        margin-top: 146px;

        .title
            position: relative;
            max-width: 380px;
            margin-bottom: 60px;

            .label
                font-size: 40px;

            .frame-image
                position: absolute;
                top: -54px;

        .countdown
            &-title
                font-size: 30px;

            &-timer
                display: flex;
                justify-content: center;

                .timer
                    display: flex;
                    flex-direction: row;
                    justify-content: space-between;
                    width: 265px;
                    font-size: 26px;

                    div
                        display: flex;
                        flex-direction: column;
        
        .images
            display: flex;
            position: absolute;
            margin-top: -20px;
            margin-left: 330px;

            .cat img
                width: 53.32px;

            .cats
                transform: rotate3d(9, 6, 1, 30deg);
                position: relative;
                margin-top: 35.52px;

                img
                    width: 43.18px;
    
    .footer
        display: flex;
        margin-top: 213px;
        font-family: "Bebas neue", sans-serif;
        width: 100%;
        justify-content: space-around;
        margin-bottom: 31px;

        .text
            display: flex;
            flex-direction: column;
            text-align: left;
            width: 397px;

            .author
                font-size: 40px;
                line-height: 60px;

            .quote
                font-size: 20px;
                line-height: 30px;
                color: #451841;

        .social-media
            margin-bottom: 21px;

            a
                margin-right: 22px;

                &:last-child
                    margin-right: 0px;